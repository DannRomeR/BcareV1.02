<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.romeg.bcarev10.Recuperar"
    android:background="@drawable/d13">

    <ImageView
        android:id="@+id/imgrecuperar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/userunlocked"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recuperar ContraseÃ±a"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_below="@+id/imgrecuperar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="280dp">

        <EditText
            android:id="@+id/txtrecuperar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="E-mail *"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColorHint="#ffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/borde"
            android:textColor="#ffff"
            />

        <Button
            android:id="@+id/enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regcampos"
            android:layout_margin="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/borde"
            android:onClick="onRecuperarClick"
            android:text="Enviar"
            android:textColor="#ffff" />

    </LinearLayout>


</RelativeLayout>
