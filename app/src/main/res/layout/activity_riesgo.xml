<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.romeg.bcarev10.Riesgo"
    android:background="@drawable/b4">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/UserCalcu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10dp"
                android:textColor="#ffff"
                android:gravity="center"
                                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tituloExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculadora de Riesgo"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:gravity="center"
                android:layout_margin="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Género:"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:id="@+id/textGenero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edad:"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:id="@+id/textEdad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colesterol Total (mg / dL)"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <Spinner
                android:id="@+id/spcolesterol1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="#ffff"
                android:hint="-Seleccione-"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colesterol HDL (mg / dL)"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <Spinner
                android:id="@+id/spcolesterolHDL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="#ffff"
                android:hint="-Seleccione-"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"/>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fumador"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <Spinner
                android:id="@+id/spFumador"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="#ffff"
                android:hint="-Seleccione-"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BP sistólica (mmHg)"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <Spinner
                android:id="@+id/sppresion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="#ffff"
                android:hint="-Seleccione-"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"/>


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicamento para presión arterial(si|no)"
                android:textColor="#ffff"
                android:textSize="19sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>


            <Spinner
                android:id="@+id/spDiabetes"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="-Seleccione-"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="calcular Riesgo"
                android:onClick="calcular"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"
                />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
