<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b4"
    tools:context="com.example.romeg.bcarev10.DatosM">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <ImageView
            android:id="@+id/imgdatosmedicos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/searchuser"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <LinearLayout
            android:id="@+id/camposmedicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_below="@+id/imgdatosmedicos">

            <TextView
                android:id="@+id/tituloDatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos Médicos"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:gravity="center"
                />


            <EditText
                android:id="@+id/edtcolesterol1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Colesterol Total(mg/dL)"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"
                android:inputType="number"
                />


            <EditText
                android:id="@+id/edtcolesterolHDL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Colesterol HDL(mg/dL)"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"
                android:inputType="number"
                />


            <EditText
                android:id="@+id/edtfumador"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Fumador"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"
                android:inputType="number"
                />

            <EditText
                android:id="@+id/edtpresion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="BP sistólica(mmHg)"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"
                android:inputType="number"
                />



            <EditText
                android:id="@+id/edtdiabetes"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Diabetes"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/borde"
                android:textColor="#ffff"
                android:inputType="number"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:text="Guardar"
                android:id="@+id/btnGuardardatosMe"
                android:background="@drawable/borde"
                android:textColor="#ffff"
                android:layout_below="@+id/camposmedicos"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:text="Calcular Riesgo"
                android:id="@+id/btnCalcular"
                android:background="@drawable/borde"
                android:textColor="#ffff"
                android:layout_below="@+id/camposmedicos"
                />

        </LinearLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
